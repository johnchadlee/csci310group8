<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>WeatherPlanning</display-name>
  <servlet>
    <servlet-name>simpleWeather</servlet-name>
    <servlet-class>csci310.weatherplanner.endpoints.SimpleWeatherServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>simpleWeather</servlet-name>
    <url-pattern>/simpleweather</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>locationsByWeather</servlet-name>
    <servlet-class>csci310.weatherplanner.endpoints.LocationsByWeatherServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>locationsByWeather</servlet-name>
    <url-pattern>/locationsbyweather</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>locationsByActivity</servlet-name>
    <servlet-class>csci310.weatherplanner.endpoints.LocationsByActivityServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>locationsByActivity</servlet-name>
    <url-pattern>/locationsbyactivity</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>detailedWeather</servlet-name>
    <servlet-class>csci310.weatherplanner.endpoints.DetailedWeatherServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>detailedWeather</servlet-name>
    <url-pattern>/detailedweather</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>activityComplete</servlet-name>
    <servlet-class>csci310.weatherplanner.endpoints.ActivityAutocompleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>activityComplete</servlet-name>
    <url-pattern>/activitycomplete</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>favorites</servlet-name>
    <servlet-class>csci310.weatherplanner.endpoints.FavoritesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>favorites</servlet-name>
    <url-pattern>/favorites</url-pattern>
  </servlet-mapping>
</web-app>
